<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/statusactivity_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
    >
        
        <LinearLayout
            android:id="@+id/statusactivity_Layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp">
        
    
            <TextView
                android:id="@+id/statusactivity_infotext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </TextView>
    
            <LinearLayout
                android:id="@+id/statusactivity_InnerLinLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
            >
    
                <ScrollView
                    android:id="@+id/statusactivity_ScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                >
    
                    <TextView
                        android:id="@+id/statusactivity_mainInformations"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="10sp"                    >
                    </TextView>
                </ScrollView>
            
        
            
            </LinearLayout>
               
               <LinearLayout
        android:id="@+id/statusactivity_layoutbuttons"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_above="@+id/emojicons"
        android:layout_alignParentBottom="true">
                
        <Button
            android:id="@+id/statusactivity_button_defrag_database"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:onClick="defragDatabase"
            android:paddingBottom="5sp"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:paddingTop="5sp"
            android:text="Defrag Database"
            android:textColor="#FFF"
            android:minWidth="0dp"/>
        />
            
        <Button
            android:id="@+id/statusactivity_emptybutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:onClick="emptybutton"
            android:paddingBottom="5sp"
            android:paddingLeft="15sp"
            android:paddingRight="15sp"
            android:paddingTop="5sp"
            android:text="Unused Button"
            android:textColor="#FFF" />
        />
                
    </LinearLayout>
               
        </LinearLayout>

    </LinearLayout>

    
</android.support.v4.widget.DrawerLayout>